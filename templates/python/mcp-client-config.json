{
  "_comment": "Add this to your MCP client configuration (Claude Desktop, Cursor, Windsurf, etc.)",
  "mcpServers": {
    "{{SERVER_NAME}}": {
      "_option_1_uv_run": {
        "command": "uv",
        "args": ["--directory", "/absolute/path/to/project", "run", "mcp-server-{{SERVER_NAME}}"],
        "env": {}
      },
      "_option_2_python": {
        "command": "python",
        "args": ["-m", "mcp_server_template"],
        "env": {}
      },
      "_option_3_docker": {
        "command": "docker",
        "args": ["run", "-i", "--rm", "mcpfactory/server-{{SERVER_NAME}}"],
        "env": {}
      }
    }
  }
}
